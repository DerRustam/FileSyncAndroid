<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@drawable/border_item"
    android:visibility="visible"
    android:layout_marginStart="7dp"
    android:layout_marginBottom="7dp"
    android:padding="3dp">
    <FrameLayout
        android:id="@+id/fl_dw_icon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/border_thumbnail"
        >
        <ImageView
            android:id="@+id/iv_dw_file_icon"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_dw_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:textSize="18sp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_download_file_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="3dp"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/fl_dw_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_download_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="2dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>